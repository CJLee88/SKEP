<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title><%= text.latest_news %></title>
</head>
<body>
  <h1><%= text.latest_news %></h1>
  <ul>
    <% articles.forEach(article => { %>
      <li>
        <a href="/news/<%= article.id %>?lang=<%= lang %>"><%= article.title %></a>
         - <%= article.date %> [<%= article.category %>]
      </li>
    <% }) %>
  </ul>
  <hr>
  <form method="GET" action="/search">
    <input type="text" name="q" placeholder="<%= text.search %>">
    <button type="submit"><%= text.search %></button>
    <input type="hidden" name="lang" value="<%= lang %>">
  </form>
  <hr>
  <a href="/admin/login?lang=<%= lang %>"><%= text.login %></a> |
  <a href="?lang=ko">🇰🇷</a> | <a href="?lang=vi">🇻🇳</a>
  <hr>
  <form method="POST" action="/subscribe?lang=<%= lang %>">
    <input type="email" name="email" placeholder="Email 구독" required>
    <button type="submit">구독</button>
  </form>
</body>
</html>